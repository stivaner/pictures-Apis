<h1>Listing photos</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Group</th>
    <th>Description</th>
    <th>Pic</th>
    <th>Orderby</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @photos.each do |photo| %>
  <tr>
    <td><%= photo.title %></td>
    <td><%= photo.group %></td>
    <td><%= photo.description %></td>
    <td><%= photo.pic %></td>
    <td><%= photo.orderby %></td>
    <td><%= link_to 'Show', photo %></td>
    <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
    <td><%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

