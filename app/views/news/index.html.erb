<h1>Listing news</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Announce</th>
    <th>Body</th>
    <th>Publication</th>
    <th>Date publication</th>
    <th>Hard title</th>
    <th>Link</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @news.each do |news| %>
  <tr>
    <td><%= news.title %></td>
    <td><%= news.announce %></td>
    <td><%= news.body %></td>
    <td><%= news.publication %></td>
    <td><%= news.date_publication %></td>
    <td><%= news.hard_title %></td>
    <td><%= news.link %></td>
    <td><%= link_to 'Show', news %></td>
    <td><%= link_to 'Edit', edit_news_path(news) %></td>
    <td><%= link_to 'Destroy', news, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

